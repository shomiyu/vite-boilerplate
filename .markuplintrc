{
  "extends": [
    "markuplint:recommended"
  ],
  "rules": {
    "doctype": "always",
    "deprecated-element": true,
    "use-list": false,
    "no-refer-to-non-existent-id": false,
    "attr-duplication": true,
    "require-datetime": true,
    "permitted-contents": true,
    "no-empty-palpable-content": false,
    "require-accessible-name": true,
    "deprecated-attr": true,
    "landmark-roles": false,
    "required-h1": true,
    "label-has-control": false,
    "id-duplication": true,
    "required-element": [
      "meta[charset=\"UTF-8\"]"
    ],
    "invalid-attr": true,
    "wai-aria": false,
    "required-attr": true
  },
  "nodeRules": [
    {
      "selector": "img",
      "rules": {
        "required-attr": [
          "src",
          "alt"
        ]
      }
    }
  ],
  "excludeFiles": [
    "./node_modules/**/*"
  ]
}
